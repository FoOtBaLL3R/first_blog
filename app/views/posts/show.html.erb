<h1><%= @post.title %></h1>

<small>
  <time><%= @post.created_at.to_date.strftime("%d %B, %Y")%></time>
  |
  <%= link_to 'Edit', edit_post_path(@post), class: "text-warning"%>
  |
  <%= link_to 'Delete',  post_path(@post), class: "text-danger", method: :delete, data: {confirm: 'Are your sure?'}%>
</small>

<p><%= @post.body %></p>
